@model List<Asm_GD_1.Models.User>

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<h2 class="mb-4 mt-4  p-5">Danh sách người dùng</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Họ tên</th>
            <th>Vai trò</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>SĐT</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Role</td>
                <td>@user.Email</td>
                <td>@user.Address</td>
                <td>@user.Phone</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>