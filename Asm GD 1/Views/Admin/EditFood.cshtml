@model Asm_GD_1.Models.Food
@{
    ViewData["Title"] = "Sửa món ăn";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Sửa món ăn</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditFood" method="post">
                        <input type="hidden" asp-for="FoodId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên món</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên món ăn..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Giá</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Ví dụ: 25000" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ảnh (URL)</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Nhập link ảnh..." />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn về món ăn..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsAvailable" class="form-check-input" />
                            <label class="form-check-label fw-bold">Còn bán?</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Danh mục</label>
                            <select asp-for="CategoryId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="MonAn" class="btn btn-secondary me-2">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
