@model Asm_GD_1.Models.User
@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4>Đăng ký</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <input type="text" name="FullName" class="form-control" placeholder="Họ và tên" value="@Model?.FullName" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="email" name="Email" class="form-control" placeholder="Email" value="@Model?.Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="text" name="Phone" class="form-control" placeholder="Số điện thoại" value="@Model?.Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="text" name="Address" class="form-control" placeholder="Địa chỉ" value="@Model?.Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <select name="Role" class="form-select">
                                <option value="">-- Chọn vai trò --</option>
                                <option value="User" selected="@("User" == Model?.Role)">Người dùng</option>
                                <option value="Admin" selected="@("Admin" == Model?.Role)">Quản trị viên</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <input type="password" name="Password" class="form-control" placeholder="Mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="password" name="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Đăng ký</button>
                    </form>

                    <div class="mt-3 text-center">
                        <span>Đã có tài khoản?</span>
                        <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>